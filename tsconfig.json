{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"outDir": "dist",
		"sourceMap": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"declaration": true,
		"pretty": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"strict": true,
		"esModuleInterop": true
	},
	"files": ["./src/index.ts"],
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
